<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Project Tracker App</title>
</head>

<body>
    <section class="container">
        <h1>Project Tracker</h1> 
        <section class="jumbotron">
            <h3>Add New Project:</h3>
            <form id="issueInputForm" method="POST" action="/new">
                <div class="form-group">
                    <label for="date">Date</label>
                    <input type="date" class="form-control" id="date" name="date" value="mm-dd-yyyy" placeholder="Date Opened...">
                </div>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Project Title...">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" id="description" name="description" placeholder="Project Description...">
                </div>
                <div class="form-group">
                    <label for="severity">Severity</label>
                    <select class="form-control" id="severity" name="severity" required>
                        <option value="" selected>Select Severity</option>
                        <option value="4-Low">Low Impact</option>
                        <option value="3-Minor">Minor</option>
                        <option value="2-Severe">Severe</option>
                        <option value="1-Critical">Critical</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="assignedTo">Project Manager</label>
                    <input type="text" class="form-control" id="assignedTo" name="assignedTo" placeholder="Enter Project Leader...">
                </div>
                <button type="submit" class="btn btn-info">Add</button>
            </form>
        </section>
        <section class="row">
            <div class="col-lg-12">
                <div id="issuesList">
                    <% ticketList.forEach(tickets => { %>
                        <div class="well">
                            <h6>Issue ID: <%=tickets._id%></h6>
                            <p><%=tickets.date%></p>
                            <p><span class="label <%=tickets.status== 'Closed' ? 'label-success' : 'label-info'%>"><%=tickets.status%></span></p>
                            <h3><%=tickets.title%></h3>
                            <p><%=tickets.description%></p>
                            <p><span class="glyphicon glyphicon-user"></span><%=tickets.assignedTo%></p>
                            <p><span class="glyphicon glyphicon-time"></span><%=tickets.severity%></p>
                            <a href="/edit/<%=tickets._id%>" class="btn btn-warning">Close</a>
                            <a href="/edit/remove/<%=tickets._id%>" class="btn btn-danger" "action.php" onclick="return confirm('Are you sure you want to Delete?')">Delete</a>
                        </div>
                    <% }) %>
                </div>
            </div>
        </section>
    </section>
</body>